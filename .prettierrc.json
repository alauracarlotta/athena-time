{
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"htmlWhitespaceSensitivity": "css",
	"insertPragma": false,
	"bracketSameLine": true,
	"jsxSingleQuote": true,
	"tabWidth": 4,
	"printWidth": 80,
	"proseWrap": "always",
	"quoteProps": "as-needed",
	"requirePragma": false,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "all",
	"useTabs": true,
	"overrides": [
		{
			"files": ["*.css"],
			"options": {
				"printWidth": 38
			}
		}
	]
}
